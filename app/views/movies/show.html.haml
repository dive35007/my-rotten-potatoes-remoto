 
-# in app/views/movies/show.html.haml

%h2 Details about #{@movies.title}

%ul#details
  %li
    Rating:
    = @movies.rating
  %li
    Released on:
    = @movies.release_date.strftime("%B %d, %Y")

%h3 Description:
%p#description= @movies.description

= link_to 'Edit info', edit_movie_path(@movies)
%br
= link_to 'Back to movies', movies_path
= button_to 'Delete', movie_path(@movies), :method => :delete, :confirm => 'Are you sure?'